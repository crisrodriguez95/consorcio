<!-- Modal -->
<style>
  #typeTramit{ text-transform: uppercase; }
</style>
<div class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Crear tipo de trámite
        </h5>
        <button type="button"
          class="btn-close"
          data-dismiss="modal"
          aria-label="Close">

        </button>
      </div>

      <div class="modal-body">
        <form class="user needs-validation" novalidate>
          {# ------------ Fila 1 ------------------ #}
          <div class="form-group">
            <label for="exampleFormControlInput1">Tipo de trámite</label>
            <input type="text"
              class="form-control inputText"
              id="typeTramit"
              name="tipoTramite"
              onkeyup="javascript:this.value=this.value.toUpperCase()"
              required />
          </div>

          <div class="form-group">
            <label for="exampleFormControlInput1">Observación</label>
            <input type="text"
              class="form-control inputText"
              id="observation"
              name="observacion"
              required />
          </div>

          {#  #}
          <div class="form-group">
            <div class="row">
              <div class="col-md-6">
                <label for="exampleFormControlInput1">Peso Tiempo</label>
                <input type="text"
                  class="form-control number"
                  id="tiempo"
                  name="tiempo"
                  maxlength="1"
                  required />
              </div>
              <div class="col-md-6">
                <label for="exampleFormControlInput1">Peso carga</label>
                <input type="text"
                  class="form-control number"
                  id="carga"
                  name="carga"
                  maxlength="1"
                  required />
              </div>
            </div>
          </div>
          <div class="form-group estado">
            <label for="email">Estado</label>
            <select class="form-select"
              required
              id="estatus"
              name="estado"
              aria-label="Default select example">
              <option value="Inactivo">
                Inactivo
              </option>
              <option value="Activo">
                Activo
              </option>
            </select>
          </div>
          {# ------------ Fila 5 Buttons ------------------ #}
          <div class="form-group">
            <div class="row">
              <div class="col-md-6">
                <button type="submit" class="btn btn-primary data">
                  Crear
                </button>
              </div>
              <div class="col-md-6">
                <button type="button"
                  class="btn btn-secondary cls"
                  data-dismiss="modal">
                  Cerrar
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
      {# <div class="modal-footer">
        
      </div> #}
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="reasignar" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">
					Reasignar usuario
				</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<form
					class="user needs-validation" novalidate>
					{# ------------ Fila 1 ------------------ #}
					<div class="form-group">
						<label for="exampleFormControlInput1">Funciones</label>
						{{
              render(
                controller(
                  'App\\Controller\\TramiteController::getFunciones'
                )
              )
            }}
					</div>
					<div class="form-group">
						<label for="exampleFormControlInput1">Usuario</label>
						<select class ="form-select selec" name="idUsuario" id="idUsuario" required>
							<option>Seleccione una funci√≥n</option>
						</select>
					</div>
					
						<div class="form-group">
            	<label for="email">Comentario</label>
            	<input type="text"
              	class="form-control inputText"
              	id="des"
              	name="descrip"
              	required />
          </div>

					<input type="hidden" name="tipoTramite" id="tipo" value={{ clienteTramite }}>
					{# ------------ Fila 5 Buttons ------------------ #}
					<div class="form-group">
						<div class="row">
							<div class="col-md-6">
								<button type="submit" class="btn btn-primary data">
									Guardar
								</button>
							</div>
							<div class="col-md-6">
								<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
									Cerrar
								</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

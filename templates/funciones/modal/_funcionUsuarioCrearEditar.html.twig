<!-- Modal -->
<div class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Asignar
        </h5>
        <button type="button"
          class="btn-close"
          data-dismiss="modal"
          aria-label="Close">

        </button>
      </div>
      <div class="modal-body">
        <form class="user">
          {# ------------ Fila 1 ------------------ #}
          <div class="form-group">
            <label for="exampleFormControlInput1">Usuario</label>
            {{
              render(
                controller('App\\Controller\\FuncionUsuarioController::getUser')
              )
            }}
          </div>
          <div class="form-group">
            <label for="exampleFormControlInput1">Funci√≥n</label>
            {{
              render(
                controller(
                  'App\\Controller\\FuncionUsuarioController::getFuncion'
                )
              )
            }}
          </div>

          {# ------------ Fila 5 Buttons ------------------ #}
          <div class="form-group">
            <div class="row">
              <div class="col-md-6">
                <button type="submit"
                  class="btn btn-primary data"
                  data-bs-dismiss="modal">
                  Guardar
                </button>
              </div>
              <div class="col-md-6">
                <button type="button"
                  class="btn btn-secondary cls"
                  data-dismiss="modal">
                  Cerrar
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

              render(
                controller(
                  'App\\Controller\\ClienteTramiteController::getTipoTramite'
                )
              )
            }}

					</div>
					<div class="form-group">
						<label for="exampleFormControlInput1">Tipo de asignacion</label>
						  	<label class="switch">
  <input type="checkbox" />
  <span class="toggle"></span>
</label>
			
					</div>


					{# ------------ Fila 5 Buttons ------------------ #}
					<div class="form-group">
						<div class="row">
							<div class="col-md-6">
								<button type="submit" class="btn btn-primary data" data-bs-dismiss="modal">
									Crear
								</button>
							</div>
							<div class="col-md-6">
								<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
									Cerrar
								</button>
							</div>
						</div>
					</div>
				</form>
			</div>
